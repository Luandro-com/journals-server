{
  "name": "periodico-api",
  "scripts": {
    "production": "node api/index.js",
    "start": "nodemon -e js,graphql -x node -r dotenv/config api/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config api/index.js",
    "playground": "graphql playground",
    "dev": "npm-run-all --parallel start playground",
    "docker:build": "docker build -t periodico-api .",
    "docker:run": "docker run  -p 4000:4000 -itd periodico-api",
    "docker": "npm run docker:build && npm run docker:run",
    "deploy": "prisma deploy -e .env.staging && now",
    "deploy:prod": "now",
    "reset": "prisma reset -f && prisma deploy && prisma seed && graphql get-schema --project database && npm test",
    "run-test": "wait-on http://localhost:4000 && NODE_ENV=production node ./test/index.test.js | tap-spec",
    "test": "npm-run-all --parallel start run-test"
  },
  "dependencies": {
    "aws-sdk": "^2.382.0",
    "bcryptjs": "2.4.3",
    "camelcase": "^5.0.0",
    "cielo": "^1.0.14",
    "cors": "^2.8.5",
    "graphql-middleware-forward-binding": "^1.3.2",
    "graphql-shield": "^5.1.0",
    "graphql-upload": "^8.0.2",
    "graphql-yoga": "^1.16.9",
    "jsonwebtoken": "^8.4.0",
    "mailgun.js": "^2.0.1",
    "nodemailer": "^4.7.0",
    "prisma-binding": "^2.2.12",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "dotenv": "^6.2.0",
    "faker": "^4.1.0",
    "graphql-cli": "^3.0.3",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prisma": "^1.23.2",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1",
    "validator": "^10.10.0",
    "wait-on": "^3.2.0"
  }
}
